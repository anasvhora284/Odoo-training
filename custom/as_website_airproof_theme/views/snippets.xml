<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add to snippets menu -->
    <template id="custom_snippets" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_feature']" position="inside">
            <t t-snippet="as_website_airproof_theme.s_airproof_banner" t-thumbnail="/as_website_airproof_theme/static/src/img/snippets/s_airproof_banner.png" />
        </xpath>
    </template>

    <!-- Banner Snippet Template -->
    <template id="s_airproof_banner" name="Airproof Banner">
        <section class="s_airproof_banner pt32 pb32">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h2>Welcome to Airproof</h2>
                        <p class="lead">Your journey starts here</p>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>