<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="custom_gradients" model="ir.ui.view">
        <field name="name">Custom Gradient Presets</field>
        <field name="key">website_snippet.custom_gradients</field>
        <field name="type">qweb</field>
        <field name="inherit_id" ref="web_editor.colorpicker" />
        <field name="arch" type="xml">
            <xpath expr="//*[@data-name='predefined_gradients']/*" position="before">
                <!-- Gradient 1 -->
                <button class="w-50 o_we_color_btn"
                    style="background-image: linear-gradient(145deg, rgb(255, 0, 0) 0%, rgb(0, 0, 0) 100%);"
                    data-color="linear-gradient(145deg, rgb(255, 0, 0) 0%, rgb(0, 0, 0) 100%)" />
                <!-- Gradient 2 -->
                <button class="w-50 o_we_color_btn"
                    style="background-image: linear-gradient(to right, #FFFFFF 0%, #000000 100%);"
                    data-color="linear-gradient(to right, #FFFFFF 0%, #000000 100%)" />
                <!-- Gradient 3 -->
                <button class="w-50 o_we_color_btn"
                    style="background-image: linear-gradient(45deg, #f0f0f0 0%, #0f0f0f 100%);"
                    data-color="linear-gradient(45deg, #f0f0f0 0%, #0f0f0f 100%)" />
            </xpath>
        </field>
    </record>
</odoo>