<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="404" inherit_id="http_routing.404">
        <xpath expr="//*[@id='wrap']" position="replace">
            <t t-set="additional_title" t-value="'404 - Not found'" />
            <div id="wrap" class="oe_structure">
                <div class="container text-center py-5">
                    <img src="/as_website_airproof/static/src/img/pages/404.jpg" alt="404 Error" class="img-fluid mb-4" style="max-width: 600px;" />
                    <p class="lead mb-4">The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.</p>
                    <a href="/" class="btn btn-primary">Go to Homepage</a>
                </div>
            </div>
        </xpath>
    </template>
</odoo>