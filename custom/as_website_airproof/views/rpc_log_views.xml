<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- list View -->
    <record id="view_rpc_log_list" model="ir.ui.view">
        <field name="name">as_website_airproof.rpc_log.list</field>
        <field name="model">as_website_airproof.rpc_log</field>
        <field name="arch" type="xml">
            <list decoration-danger="not success" decoration-success="success">
                <field name="name"/>
                <field name="type"/>
                <field name="function"/>
                <field name="user_id"/>
                <field name="date"/>
                <field name="execution_time"/>
                <field name="success"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_rpc_log_form" model="ir.ui.view">
        <field name="name">as_website_airproof.rpc_log.form</field>
        <field name="model">as_website_airproof.rpc_log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="type"/>
                            <field name="function"/>
                            <field name="user_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="execution_time"/>
                            <field name="success"/>
                            <field name="ip_address"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Parameters">
                            <field name="params"/>
                        </page>
                        <page string="Result">
                            <field name="result"/>
                        </page>
                        <page string="Error" invisible= "[('error_message', '=', False)]">
                            <field name="error_message"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_rpc_log_search" model="ir.ui.view">
        <field name="name">as_website_airproof.rpc_log.search</field>
        <field name="model">as_website_airproof.rpc_log</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="function"/>
                <field name="user_id"/>
                <separator/>
                <filter string="XML-RPC" name="xml_rpc" domain="[('type', '=', 'xml')]"/>
                <filter string="JSON-RPC" name="json_rpc" domain="[('type', '=', 'json')]"/>
                <separator/>
                <filter string="Success" name="success" domain="[('success', '=', True)]"/>
                <filter string="Failed" name="failed" domain="[('success', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="RPC Type" name="group_by_type" context="{'group_by': 'type'}"/>
                    <filter string="User" name="group_by_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by': 'date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_rpc_log_graph" model="ir.ui.view">
        <field name="name">as_website_airproof.rpc_log.graph</field>
        <field name="model">as_website_airproof.rpc_log</field>
        <field name="arch" type="xml">
            <graph string="RPC Logs Analysis" type="bar">
                <field name="type" type="row"/>
                <field name="function" type="row"/>
                <field name="success" type="row"/>
                <field name="execution_time" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_rpc_log_pivot" model="ir.ui.view">
        <field name="name">as_website_airproof.rpc_log.pivot</field>
        <field name="model">as_website_airproof.rpc_log</field>
        <field name="arch" type="xml">
            <pivot string="RPC Logs Analysis">
                <field name="type" type="row"/>
                <field name="function" type="row"/>
                <field name="success" type="col"/>
                <field name="execution_time" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Action -->
    <record id="action_rpc_log" model="ir.actions.act_window">
        <field name="name">RPC Logs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">as_website_airproof.rpc_log</field>
        <field name="view_mode">list,form,graph,pivot</field>
        <field name="context">{'search_default_group_by_type': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No RPC logs yet
            </p>
            <p>
                RPC logs will be created when external systems interact with Odoo through XML-RPC or JSON-RPC protocols.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_rpc_log" name="RPC Logs" parent="as_website_airproof.menu_airproof_root" action="action_rpc_log" sequence="50"/>
</odoo> 