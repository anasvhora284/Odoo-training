<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="as_website_airproof.notification_component">
        <div class="notification-component p-4 text-center">
            <h1>Notification Service</h1>
            <div class="alert alert-light border my-4">
                <p t-out="state.message" />
            </div>
            <div class="d-flex justify-content-center gap-2 my-4">
                <button class="btn btn-info" t-on-click="showNotification('info')">Info</button>
                <button class="btn btn-success" t-on-click="showNotification('success')">Success</button>
                <button class="btn btn-warning" t-on-click="showNotification('warning')">Warning</button>
                <button class="btn btn-danger" t-on-click="showNotification('danger')">Danger</button>
            </div>
        </div>
    </t>
</templates> 