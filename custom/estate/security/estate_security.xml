<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_real_estate" model="ir.module.category">
        <field name="name">Real Estate</field>
        <field name="description">Manage real estate properties and offers</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_estate_user" model="res.groups">
        <field name="name">Estate: User</field>
        <field name="category_id" ref="module_category_real_estate"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_estate_manager" model="res.groups">
        <field name="name">Estate: Manager</field>
        <field name="category_id" ref="module_category_real_estate"/>
        <field name="implied_ids" eval="[(4, ref('group_estate_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <record id="estate_property_rule_global" model="ir.rule">
        <field name="name">Estate: Read All Properties</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_estate_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="estate_property_rule_own" model="ir.rule">
        <field name="name">Estate: Manage Own Properties</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">[('seller_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_estate_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="estate_property_offer_rule_global" model="ir.rule">
        <field name="name">Estate: Read All Offers</field>
        <field name="model_id" ref="model_estate_property_offer"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_estate_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="estate_property_offer_rule_own" model="ir.rule">
        <field name="name">Estate: Manage Offers on Own Properties</field>
        <field name="model_id" ref="model_estate_property_offer"/>
        <field name="domain_force">[('property_id.seller_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_estate_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="estate_property_offer_rule_no_own" model="ir.rule">
        <field name="name">Cannot offer on own properties</field>
        <field name="model_id" ref="model_estate_property_offer"/>
        <field name="domain_force">[('property_id.seller_id', '!=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_estate_user'))]"/>
        <field name="perm_create" eval="True"/>
    </record>

    <record id="estate_property_rule_manager" model="ir.rule">
        <field name="name">Estate Manager: Full Access</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_estate_manager'))]"/>
    </record>

    <record id="estate_property_offer_rule_manager" model="ir.rule">
        <field name="name">Estate Manager: Full Access to Offers</field>
        <field name="model_id" ref="model_estate_property_offer"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_estate_manager'))]"/>
    </record>

    <record id="base.user_demo" model="res.users">
        <field name="groups_id" eval="[(4, ref('estate.group_estate_user'))]"/>
    </record>
</odoo> 