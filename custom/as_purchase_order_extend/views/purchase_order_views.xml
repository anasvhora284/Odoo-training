<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_inherit_import_export" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.import.export</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_import_export_logs" type="object" class="oe_stat_button" icon="fa-history" invisible="[('import_export_log_ids', '=', [])]">
                    <field name="import_export_log_ids" widget="statinfo" string="Import/Export Logs"/>
                </button>
            </div>
        </field>
    </record>
</odoo> 