<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="as_product_collection.DilogBoxBody" owl="1">
        <Dialog title="'Select Product Collection'" size="'xl'">
            <div class="p-4">
                <div class="form-group mb-4">
                    <label for="collectionSelect" class="form-label">Select Product Collection</label>
                    <select class="form-select" id="collectionSelect" t-on-change="onCollectionChange" t-att-disabled="state.loading">
                        <option value="">Choose a collection...</option>
                        <t t-foreach="state.collections" t-as="collection" t-key="collection.id">
                            <option t-att-value="collection.id" t-out="collection.name"/>
                        </t>
                    </select>
                </div>

                <div t-if="state.error" class="alert alert-warning" role="alert">
                    <t t-out="state.error"/>
                </div>

                <div t-if="state.loading" class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <div class="mt-2">Loading...</div>
                </div>

                <div t-elif="state.products.length" class="row g-3">
                    <t t-foreach="state.products" t-as="product" t-key="product.id">
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="card h-100">
                                <img t-att-src="product.image_url" class="card-img-top" t-att-alt="product.name"/>
                                <div class="card-body">
                                    <h5 class="card-title" t-out="product.name"/>
                                    <p class="card-text" t-out="product.price_formatted"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>

                <div t-if="!state.products.length and state.selectedCollection" class="alert alert-info">
                    No products found in this collection.
                </div>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-secondary" t-on-click="() => props.close()" t-att-disabled="state.loading">
                    Cancel
                </button>
                <button class="btn btn-primary ms-2" t-on-click="applyCollection" t-att-disabled="!state.selectedCollection || state.loading">
                    Save
                </button>
            </t>
        </Dialog>
    </t>
</templates>
