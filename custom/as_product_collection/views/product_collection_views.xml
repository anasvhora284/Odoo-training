<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="product_collection_form" model="ir.ui.view">
        <field name="name">website.product.collection.form</field>
        <field name="model">website.product.collection</field>
        <field name="arch" type="xml">
            <form string="Product Collection">

                <sheet>
                    <group>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </group>

                    <notebook>
                        <page name="products" string="Products">
                            <field name="product_ids"/>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>

    <record id="product_collection_list" model="ir.ui.view">
        <field name="name">website.product.collection.list</field>
        <field name="model">website.product.collection</field>
        <field name="arch" type="xml">
            <list string="Product Collection">
                <field name="name"/>
            </list>
        </field>
    </record>
</odoo>