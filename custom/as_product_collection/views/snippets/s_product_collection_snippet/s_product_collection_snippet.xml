<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="s_product_collection_snippet" name="Product Collection">
        <section class="s_product_collection_snippet js_sale oe_website_sale o_carousel_product_card pt32 pb32" data-snippet="s_product_collection_snippet" data-collection-id="">
            <div class="container">
                <div class="text-center py-4 collection-placeholder">
                    <div class="d-block">
                        <i class="fa fa-shopping-cart fa-4x mb-3"></i>
                    </div>
                    <h3 class="mb-3">Product Collection</h3>
                    <p class="mb-3">Select a product collection to display products here.</p>
                    <p class="small text-muted">In edit mode, click "Select Collection" from the options to choose products.</p>
                </div>
            </div>
            <div class="o_product_feature_panel d-none"></div>
        </section>
    </template>

    <template id="s_product_collection_snippet_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-js="SelectCollection" data-selector=".s_product_collection_snippet"/>
        </xpath>
    </template>
</odoo>