<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="as_bulk_discount_extended.SBODRWizard" owl="1">
        <Dialog title="'Special Bulk Order Discount Request'" size="'md'">
            <div class="sbodr-wizard-form p-3">
                <div class="mb-3">
                    <label class="form-label" for="fullName">Full Name</label>
                    <input type="text" class="form-control" id="fullName" t-model="state.fullName" readonly="true" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input type="email" class="form-control" id="email" t-model="state.email" readonly="true" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="quantity">Quantity</label>
                    <input type="number" class="form-control" id="quantity" t-model="state.quantity" min="10" max="1000" />
                    <small class="form-text text-muted">Minimum: 10, Maximum: 1000</small>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="discount">Discount (%)</label>
                    <input type="number" class="form-control" id="discount" t-model="state.discount" min="1" max="70" step="0.1" />
                    <small class="form-text text-muted">Minimum: 1%, Maximum: 70%</small>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Why do you need a bulk discount?</label>
                    <textarea class="form-control" id="description" t-model="state.description" rows="4" placeholder="Please explain why you need a bulk discount..."></textarea>
                </div>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-secondary" t-on-click="props.close">Cancel</button>
                <button class="btn btn-primary ms-2" t-on-click="sendRequest">Send Request</button>
            </t>
        </Dialog>
    </t>
</templates>
