            <div t-if="product and website.is_sbodr_button_visible(product)" class="d-inline-flex align-items-center js_sbodr_container d-none mb-2 me-auto">
                <a role="button" href="#" class="btn btn-secondary js_sbodr_request w-100">
                    <i class="fa fa-tags me-1"></i> Request Bulk Discount
                </a>
            </div>
        </xpath>
    </template>
</odoo>
