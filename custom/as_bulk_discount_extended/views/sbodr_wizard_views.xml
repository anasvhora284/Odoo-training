<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sbodr_wizard_form" model="ir.ui.view">
        <field name="name">sbodr.wizard.form</field>
        <field name="model">sbodr.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="full_name"/>
                    <field name="email"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="discount"/>
                    <field name="description"/>
                </group>
                <footer>
                    <button name="send_request" string="Send Request" type="object" class="btn btn-primary"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
